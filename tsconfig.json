{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "types": ["reflect-metadata", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules", "dist", "src/**/*.spec.ts", "src/**/__test__/*"
  ]
}